<launch>
    <arg name="output" default="screen"/>
    <arg name="test" default="true"/>
    <arg name="bagfile" default="/home/chao/Workspace/bag/pennapps/apriltag3.bag"/>
    <arg name="camera" default="/mv_25001185"/>
    <arg name="ns" default="apriltag"/>

    <!--Rosbag-->
    <node if="$(arg test)" pkg="rosbag" type="play" name="player"
        output="log" args="-l $(arg bagfile)">
    </node>

    <!--Detector Node-->
    <include file="$(find apriltag_ros)/launch/detector.launch">
        <arg name="camera" value="$(arg camera)"/>
        <arg name="ns" value="$(arg ns)"/>
    </include>

    <!-- Mapper Node -->
    <include file="$(find apriltag_ros)/launch/mapper.launch">
        <arg name="ns" value="$(arg ns)"/>
    </include>
</launch>
